<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="sample.controller.UserController">

    <children>
        <ListView fx:id="userListView" layoutX="14.0" layoutY="14.0" prefHeight="200.0" prefWidth="300.0"/>
        <TextField fx:id="nameField" layoutX="330.0" layoutY="14.0" promptText="Name"/>
        <TextField fx:id="addressField" layoutX="330.0" layoutY="54.0" promptText="Address"/>
        <TextField fx:id="numberPhoneField" layoutX="330.0" layoutY="94.0" promptText="Phone Number"/>
        <TextField fx:id="emailField" layoutX="330.0" layoutY="134.0" promptText="Email"/>
        <Button fx:id="createButton" layoutX="330.0" layoutY="174.0" text="Create" onAction="#createUser"/>
        <Button fx:id="editButton" layoutX="410.0" layoutY="174.0" text="Edit" onAction="#editUser"/>
        <Button fx:id="deleteButton" layoutX="490.0" layoutY="174.0" text="Delete" onAction="#deleteUser"/>
    </children>
</AnchorPane>