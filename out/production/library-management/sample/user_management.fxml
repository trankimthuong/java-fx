<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="sample.controller.UserController">

    <children>
        <Button fx:id="backButton" layoutX="0.0" layoutY="14.0" text="Back" onAction="#handleBack"/>
        <ListView fx:id="userListView" layoutX="74.0" layoutY="14.0" prefHeight="200.0" prefWidth="300.0"/>
        <TextField fx:id="nameField" layoutX="400.0" layoutY="14.0" promptText="Name"/>
        <TextField fx:id="addressField" layoutX="400.0" layoutY="54.0" promptText="Address"/>
        <TextField fx:id="numberPhoneField" layoutX="400.0" layoutY="94.0" promptText="Phone Number"/>
        <TextField fx:id="emailField" layoutX="400.0" layoutY="134.0" promptText="Email"/>
        <Button fx:id="createButton" layoutX="400.0" layoutY="174.0" text="Create" onAction="#createUser"/>
        <Button fx:id="editButton" layoutX="480.0" layoutY="174.0" text="Edit" onAction="#editUser"/>
        <Button fx:id="deleteButton" layoutX="560.0" layoutY="174.0" text="Delete" onAction="#deleteUser"/>
    </children>
</AnchorPane>