<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="sample.controller.BookController">

    <children>
        <Button fx:id="backButton" layoutX="0.0" layoutY="14.0" text="Back" onAction="#handleBack"/>
        <ListView fx:id="bookListView" layoutX="74.0" layoutY="14.0" prefHeight="200.0" prefWidth="300.0"/>
        <TextField fx:id="titleField" layoutX="400.0" layoutY="14.0" promptText="Title"/>
        <TextField fx:id="authorField" layoutX="400.0" layoutY="54.0" promptText="Author"/>
        <TextField fx:id="genreField" layoutX="400.0" layoutY="94.0" promptText="Genre"/>
        <TextField fx:id="publicationYearField" layoutX="400.0" layoutY="134.0" promptText="Publication year"/>
        <TextField fx:id="quantityAvailableField" layoutX="400.0" layoutY="134.0" promptText="Quantity available"/>
        <Button fx:id="createButton" layoutX="400.0" layoutY="174.0" text="Create" onAction="#createBook"/>
        <Button fx:id="editButton" layoutX="480.0" layoutY="174.0" text="Edit" onAction="#editBook"/>
        <Button fx:id="deleteButton" layoutX="570.0" layoutY="174.0" text="Delete" onAction="#deleteBook"/>
    </children>
</AnchorPane>